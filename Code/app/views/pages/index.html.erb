<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Site</th>
      <th>Status</th>
      <th>Created at</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= link_to page.title, edit_page_path(page) %></td>
        <td><%= page.site %></td>
        <td><%= page.status %></td>
        <td><%= page.created_at %> (<%= time_ago_in_words(page.created_at) %> ago)</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path, class: "btn btn-primary" %>
