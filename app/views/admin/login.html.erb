<div class="row">
    <div class="col-sm-12">
        <h1>Admin Login</h1>
    </div>
    <div class="col-sm-12">
        <%= form_tag do%>
            <div class="form-group">
                <label for="key">Key: </label>
                <%= password_field_tag :key %>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
            <% if flash[:notice] %>
                <div class="notice" style="color: red"><%= flash[:notice] %></div>
            <% end %>
        <% end %>
    </div>
</div>