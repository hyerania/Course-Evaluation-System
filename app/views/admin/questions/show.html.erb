<h1>Admin::Questions Manager</h1>

<table id="t01">
    <tr>
        <th>ID</th>
        <th>Details</th>
        <th>Answer</th>
        <th>Choice 1</th>
        <th>Choice 2</th>
        <th>Choice 3</th>
        <th>Choice 4</th>
    </tr>
    <% @all_questions.each do |question| %>
        <tr>
            <td><%= question.qid %></td>
            <td><%= question.content %></td>
            <td><%= question.answer %></td>
            <td><%= question.c1 %></td>
            <td><%= question.c2 %></td>
            <td><%= question.c3 %></td>
            <td><%= question.c4 %></td>
        </tr>
    <% end %>
</table>

<div class="form-group" style="margin: 20px 0px">
    <a href="/admin/questions/new" class="btn btn-primary btn-lg" role="button">Add Question</a>
</div>