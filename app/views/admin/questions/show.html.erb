<div class="row">
    <div class="col-sm-12">
        <h1>Question Manager</h1>
        <p>Create, update, and remove questions.</p>
        <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
    </div>
    <div class="col-sm-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Content</th>
                        <th>Answer</th>
                        <th>Choice 1</th>
                        <th>Choice 2</th>
                        <th>Choice 3</th>
                        <th>Choice 4</th>
                        <th>Choice 5</th>
                        <th>Delete</th>
                        <th>Copy</th>
                    </tr>
                </thead>
                <tbody>
                        <% @all_questions.each do |question| %>
                            <tr>
                                <td><%= link_to question.qid, "/admin/questions/edit/#{question.qid}" %></td>
                                <td><%= question.content %></td>
                                <td><%= question.answer %></td>
                                <td><%= question.c1 %></td>
                                <td><%= question.c2 %></td>
                                <td><%= question.c3 %></td>
                                <td><%= question.c4 %></td>
                                <td><%= question.c5 %></td>
                                <!--<td><%= question.c1_count %></td>-->
                                <!--<td><%= question.c2_count %></td>-->
                                <!--<td><%= question.c3_count %></td>-->
                                <!--<td><%= question.c4_count %></td>-->
                                <!--<td><%= question.c5_count %></td>-->
                                
                                <td><%= link_to 'Remove', "/admin/questions/delete/#{question.qid}", :method => :delete, :id => "remove#{question.qid}"%></td>
                                <td><%= link_to 'Copy', "/admin/questions/copy/#{question.qid}", :method => :put %></td>
                            </tr>
                        <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<hr>
<%= form_for @num_answers, :url => {:controller => "/admin/questions/new", :action => "show"} do |f| %>
    <div class="form-group">
        <h4>Create a new question</h4>
        <label>Number of answer choices:</label>
        <%= select_tag(:answer, options_for_select([2,3,4,5]), :id => "numAnswers")%>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" role="button">Add Question</button>
        <a href="/admin/questions/export.csv" class="btn btn-primary" role="button">Export Questions to CSV</a>

    </div>
<% end %>