<h1>Admin::Questions Manager</h1>
<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<table id="t01", class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Details</th>
        <th>Answer</th>
        <th>Choice 1</th>
        <th>Choice 2</th>
        <th>Choice 3</th>
        <th>Choice 4</th>
        <th>Delete</th>
    </tr>
    <% @all_questions.each do |question| %>
        <tr>
            <td><%= link_to question.qid, "/admin/questions/edit/#{question.qid}" %></td>
            <td><%= question.content %></td>
            <td><%= question.answer %></td>
            <td><%= question.c1 %></td>
            <td><%= question.c2 %></td>
            <td><%= question.c3 %></td>
            <td><%= question.c4 %></td>
            <td><%= link_to 'Remove', "/admin/questions/delete/#{question.qid}", :method => :delete %></td>
        </tr>
    <% end %>
</table>
<%#= button_to 'Export questions to CSV', export_questions_path(format: 'csv'), class: 'btn btn-primary btn-lg' %>
<div class="form-group" style="margin: 20px 0px">
    <a href="/admin/questions/new" class="btn btn-primary btn-lg" role="button">Add Question</a>
    <a href="/admin/questions/export.csv" class="btn btn-primary btn-lg" role="button">Export Questions to CSV</a>
    <%#= button_to 'Export questions to CSV', export_questions_path(format: 'csv') %>
</div>
