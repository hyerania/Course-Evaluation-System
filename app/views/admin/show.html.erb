<h1>All students</h1>

<h4> Overall Average: <%=@average%></h4>

<table id="t01">
    <thead>
        <tr>
            <th>UIN &nbsp; &nbsp; &nbsp;</th>
            <th>Student Name &nbsp; &nbsp; &nbsp;</th>
            <th>Section &nbsp; &nbsp; &nbsp;</th>
            <th>Attempts &nbsp; &nbsp; &nbsp;</th>
            <th>Score &nbsp; &nbsp; &nbsp;</th>
        </tr>
    </thead>
  
    <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.uin %></td>
            <td><%= student.name %></td>
            <td><%= student.section %></td>
            <td><%= student.attempts %></td>
            <td><%= student.score %></td>
          </tr>
        <% end %>
    </tbody>
</table>

<div class="form-group" style="margin: 20px 0px">
    <a href="/admin/questions/show" class="btn btn-primary btn-lg" role="button">Questions Manager</a>
    <a href="/admin/evaluations/show" class="btn btn-primary btn-lg" role="button">Evaluations Manager</a>
</div>

