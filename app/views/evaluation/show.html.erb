<h1>Create Evaluations</h1>

<div text-align:center>

<table id="questions">
    <thead>
        <tr>
            <th>Selected &nbsp; &nbsp; &nbsp;</th>
            <th># &nbsp; &nbsp; &nbsp;</th>
            <th>Title &nbsp; &nbsp; &nbsp;</th>
        </tr>
    </thead>
  
    <tbody>
        <% @questions.values.each do |question| %>
          <tr>
            <td><%= button_to 'Select', selectq_path(question.qid)%> </td>
            <td><%= question.qid %></td>
            <td><%= question.content %></td>
          </tr>
        <% end %>
    </tbody>
</table>

<table id="selected">
    <thead>
        <tr>
            <th>Selected &nbsp; &nbsp; &nbsp;</th>
            <th># &nbsp; &nbsp; &nbsp;</th>
            <th>Title &nbsp; &nbsp; &nbsp;</th>
        </tr>
    </thead>
  
    <tbody>
        <% @selected_questions.each do |question| %>
          <tr>
            <td><%= button_to 'Unselect', selectq_path(:id=>question.qid)%> </td>
            <td><%= question.qid %></td>
            <td><%= question.content %></td>
          </tr>
        <% end %>
    </tbody>
</table>

</div>

<div><%= button_to 'Save', save_path()%></div>
<div><%= button_to 'Random', selectr_path()%></div>