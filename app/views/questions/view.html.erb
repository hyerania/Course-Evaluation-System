<h1>Self-Evaluation Exam</h1>

<li><%= link_to 'Personal Evaluation',instructions_student_path %></li>

<%=form_for :questions_form, :url => {:controller => 'questions',:action => "view"} do |q|%>
    <table id="questions">
        <thead>
            <tr>
                <th>Content &nbsp; &nbsp; &nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <% @questions.each do |question| %>
              <tr>
                <td><%= question.content %></td>
                <td><%= radio_button_tag :choice, question.c1 %></td>
                <td><%= question.c1%></td>
                <td><%= radio_button_tag :choice, question.c2 %></td>
                <td><%= question.c2%></td>
                <td><%= radio_button_tag :choice, question.c3 %></td>
                <td><%= question.c3%></td>
                <td><%= radio_button_tag :choice,question.c4 %></td>
                <td><%= question.c4%></td>
                <td><%= radio_button_tag :choice, question.c5 %></td>
                <td><%= question.c5%></td>
              </tr>
            <% end %>
        </tbody>
    </table>
    <% if session[:page] == @evaluation.count-1 %>
        <%= submit_tag 'Submit',:id=>"questions_next"%>
    <% else %>
        <%= hidden_field_tag(:page, session[:page]+1) %>
        <%= submit_tag 'Next',:id=>"questions_next"%>
    <% end %>
<% end %>

    