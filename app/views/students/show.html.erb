<% flash.each do |key, value| %>
<div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<%= link_to "Logout", controller: "students", action: "logout" %>

<h1>Records</h1>
<p>
    <table style = "width:100%", border = "1px solid black">
        <tr>
            <th>UIN</th>
            <th>Name</th>
            <th>Section</th>
            <th>Attempts</th>
            <th>Score</th>
            <th>Change Section</th>
        </tr>
        <tr>
            <td><%= @student.uin %></td>
            <td><%= @student.name %></td>
            <td><%= @student.section %></td>
            <td><%= @student.attempts %></td>
            <td><%= @student.score.to_s+"/"+@student.scoretotal.to_s+"(#{((@student.score+0.0)/((@student.scoretotal.nonzero?||1)+0.0)).round(2)})" %></td>
            <td><%= form_tag do %>
                <%= select_tag 'section', options_for_select(@list_of_sections, @selected_section) %>
                <%= submit_tag "Update", :name => "uin[#{@student.uin}]" %>
                <% end %>
            </td>
        </tr>
    </table>
</p>


<h1>Instructions</h1>
<%= text_area_tag :content, @instructions.content, :rows => 10, :cols => 120%>
<%= simple_format " \n " %>

<%= tinymce %>

<script type="text/javascript">
  tinyMCE.init({
    selector: 'textarea',
    branding: false,
    menubar: false,
    toolbar: false,
    readonly: 1,
  });
</script>

<h1>Begin Test</h1>
<p>
    <%= form_tag do%>
       <%= "Access Code: "%><%= text_field_tag :access_code %><br>
       <%= submit_tag "Begin" %><br>
    <% end %>
</p>