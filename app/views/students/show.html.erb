<%= link_to "Logout", controller: "students", action: "logout" %>

<h1>Records</h1>
<p>
    <table style = "width:100%", border = "1px solid black", class="table table-hover">
        <tr>
            <th>UIN</th>
            <th>Name</th>
            <th>Section</th>
            <th>Attempts</th>
            <th>Score</th>
            <th>Change Section</th>
        </tr>
        <tr>
            <td><%= @student.uin %></td>
            <td><%= @student.name %></td>
            <td><%= @student.section %></td>
            <td><%= @student.attempts %></td>
            <td><%= @student.score %></td>
            <td><%= form_tag do %>
                <%= select_tag 'section', options_for_select(@list_of_sections, @selected_section) %>
                <%= submit_tag "Update", :name => "uin[#{@student.uin}]" %>
                <% end %>
            </td>
        </tr>
    </table>
</p>


<h1>Begin Test</h1>
<p>
    <%= form_tag do%>
       <%= "Access Code: "%><%= text_field_tag :access_code %><br>
       <%= submit_tag "Begin" %><br>
    <% end %>
    <% if flash[:notice] %>
      <div class="notice" style="color: red"><%= flash[:notice] %></div>
    <% end %>
</p>